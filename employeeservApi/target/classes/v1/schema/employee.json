{
  "title": "Employee resource",
  "description": "Employee resource object",
  "type": "object",
  "properties": {
    "id": {
      "description": "employee id",
      "type": "integer"
    },
    "first_name": {
      "description": "first name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "last_name": {
      "description": "last name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "date_of_birth": {
       "description" : "date of birth",
       "type" : "string",
       "_pattern":"^((19|2[0-9])[0-9]{2})-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
       "pattern":"^\\d{4}-\\d{2}-\\d{2}$"
    },
    "address": {
       "description" : "address of employee",
       "$ref" : "address.json"
    }
  },
  "required": [
    "first_name",
    "last_name",
    "date_of_birth",
    "address"
  ]
}